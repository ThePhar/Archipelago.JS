{
    "env": {
        "browser": true,
        "node": true
    },
    "extends": [ "eslint:recommended" ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": [
        "**/typings/**/*.d.ts",
        "**/*.cjs",
        "coverage/",
        "node_modules/"
    ],
    "overrides": [{
        "files": [ "**/*.d.ts" ],
        "rules": { "no-unused-vars": "off" }
    }]
}
