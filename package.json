{
    "name": "archipelago.js",
    "version": "2.0.0_dev",
    "description": "A promise-based JavaScript library for communicating with an Archipelago MultiServer.",
    "author": "Zach Parks <zach@alliware.com>",
    "license": "MIT",
    "type": "module",
    "main": "./src/index.js",
    "types": "./typings/index.d.ts",
    "homepage": "https://github.com/ThePhar/archipelago.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ThePhar/archipelago.js.git"
    },
    "scripts": {
        "cjs": "rollup ./src/index.js --config ./rollup.config.js",
        "dts": "rimraf -rf ./typings/ && tsc",
        "lint": "eslint --cache --fix **/*.{js,ts}",
        "build:lite": "npm run lint && npm run dts && npm run cjs",
        "build:full": "npm run build:lite && npm run test && npm pack --pack-destination ./packages/",
        "test": "vitest run --passWithNoTests",
        "test:coverage": "vitest run --passWithNoTests --coverage"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.18.1",
        "@typescript-eslint/parser": "^6.18.1",
        "eslint": "^8.56.0",
        "eslint-plugin-jsdoc": "^48.0.2",
        "rimraf": "^5.0.5",
        "rollup": "^4.9.4",
        "typescript": "^5.3.3",
        "vitest": "^1.1.3"
    }
}
